# Server
PORT=3000
GRPC_HOST=0.0.0.0
GRPC_PORT=5000

# Email provider (SendInBlue/Brevo)
EMAIL_API_KEY=your-sendinblue-api-key

# Firebase - path to service account JSON file (local development)
GOOGLE_APPLICATION_CREDENTIALS=./firebase-adminsdk.json

# Firebase - inline JSON content (cloud deployment, alternative to file path)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Firebase project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# Push notification provider: "sdk" (Firebase Admin SDK) or "http" (FCM HTTP v1 via JWT)
PUSH_NOTIFICATION_PROVIDER=sdk

# MCP transport: "stdio" (default, for CLI) or "http" (mounts on same HTTP port)
# MCP_TRANSPORT=http
