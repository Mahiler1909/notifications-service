{
  "mcpServers": {
    "notifications-stdio": {
      "command": "npx",
      "args": ["ts-node", "--transpile-only", "src/mcp-bootstrap.ts"],
      "cwd": "/path/to/notifications-service",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "notifications-http": {
      "type": "http",
      "url": "http://localhost:3001/mcp"
    }
  }
}
